---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// You can define SEO variables here
const title = "Member Portal | T.S.K.V. Spartacus";
const description = "Access your T.S.K.V. Spartacus membership details and manage your account.";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <BaseHead title={title} description={description} />
    <style>
        /* Modernized Styles */
        .portal-hero {
            background: linear-gradient(rgba(55, 0, 27, 0.85), rgba(186, 19, 26, 0.75)), url('/images/hero-membership.jpg');
            background-size: cover;
            background-position: center;
            padding: 100px 0 60px;
            text-align: center;
            color: white;
        }
        
        .portal-hero h1 { font-size: 3rem; margin-bottom: 0.5rem; text-transform: uppercase; }
        .portal-hero h2 { color: var(--spartacus-yellow); font-size: 1.5rem; font-weight: 400; }

        .portal-container {
            max-width: 1100px;
            margin: -40px auto 80px;
            padding: 0 20px;
            position: relative;
        }

        /* Tab System */
        .tabs-nav {
            display: flex;
            gap: 10px;
            margin-bottom: -1px;
        }

        .tab-btn {
            background: #f4f4f4;
            border: 1px solid #ddd;
            padding: 12px 25px;
            cursor: pointer;
            border-radius: 8px 8px 0 0;
            font-weight: 600;
            transition: all 0.3s ease;
            color: #666;
        }

        .tab-btn.active {
            background: white;
            border-bottom-color: white;
            color: var(--spartacus-red);
            border-top: 3px solid var(--spartacus-red);
        }

        .portal-widget-container {
            background: white;
            border-radius: 0 8px 8px 8px;
            padding: 40px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            min-height: 600px;
            border: 1px solid #ddd;
        }

        .tab-content { display: none; }
        .tab-content.active { display: block; }

        .conscribo-app-container {
            width: 100%;
            min-height: 500px;
        }

        .help-section {
            margin-top: 40px;
            padding: 30px;
            background: #fff;
            border-radius: 8px;
            text-align: center;
            border-left: 5px solid var(--spartacus-red);
        }

        @media (max-width: 768px) {
            .tabs-nav { flex-direction: column; gap: 0; }
            .tab-btn { border-radius: 0; }
        }
    </style>
</head>
<body>
    <Header />

    <section class="portal-hero">
        <div class="container">
            <h1>Member Portal</h1>
            <h2>Strength & Community</h2>
        </div>
    </section>

    <main>
        <div class="portal-container">
            
            <div class="tabs-nav">
                <button class="tab-btn active" data-tab="details">
                    <i class="fas fa-user-circle"></i> Membership Details
                </button>
                <button class="tab-btn" data-tab="files">
                    <i class="fas fa-folder-open"></i> Association Files
                </button>
            </div>

            <div class="portal-widget-container">
                <div id="details" class="tab-content active">
                    <div class="conscribo-app-container" data-id="af04808317"></div>
                </div>

                <div id="files" class="tab-content">
                    <div class="conscribo-app-container" data-id="a071d903b8"></div>
                </div>
            </div>

            <div class="help-section">
                <h3>Need Assistance?</h3>
                <p>If you have questions regarding your data or access, contact the Secretary.</p>
                <a href="mailto:secretary@tskvspartacus.nl" style="color: var(--spartacus-red); font-weight: bold; text-decoration: none;">
                    <i class="fas fa-envelope"></i> secretary@tskvspartacus.nl
                </a>
            </div>
        </div>
    </main>

    <Footer />

    <script async src="https://leden.conscribo.nl/TSKVSpartacus/portal/loader" type="module"></script>

    <script is:inline>
        const tabs = document.querySelectorAll('.tab-btn');
        const contents = document.querySelectorAll('.tab-content');

        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const target = tab.dataset.tab;

                tabs.forEach(t => t.classList.remove('active'));
                contents.forEach(c => c.classList.remove('active'));

                tab.classList.add('active');
                document.getElementById(target).classList.add('active');
            });
        });
    </script>
</body>
</html>
